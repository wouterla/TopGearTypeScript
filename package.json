{
  "name": "top-gear-refactoring-kata",
  "version": "1.0.0",
  "description": "This is a refactoring challenge where we look at a single-method case, which is untested, needs refactoring, and is hard to read. Oh, and contains bugs;-)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js?|ts?)$"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wouterla/TopGearKata"
  }
}
